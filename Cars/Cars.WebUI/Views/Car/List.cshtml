@*@using Cars.Domain.Entities
@model IEnumerable<Car>*@
@model Cars.WebUI.Models.ShowRoom

@{
    ViewBag.Title = "Cars";
}


<table class="table">
    <thead class="table-hover">
        <tr>
            <th>Mark</th>
            <th>Model</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>@Html.DisplayFor(c => car.Mark.Name)</td>
                <td>@Html.DisplayFor(c => car.Model)</td>
                <td>@car.Price.ToString("c")</td>
            </tr>
        }
    </tbody>
</table>


