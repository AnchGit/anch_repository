@model Cars.WebUI.Models.RegisterModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(true, "")
        <div>
            <p>Name: @Html.EditorFor(u => u.Name)</p>
            <p>Surname: @Html.EditorFor(u => u.Surname)</p>
        </div>
        <div>
            <div>
                <input type="submit" value="Save" />
            </div>
        </div>
    </div>
}
